<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_CardPrincipal"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        card_view:cardCornerRadius="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageView
                android:id="@+id/image_CardPrincipal_Logo"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/fundo_logo"
                android:contentDescription="@string/logo"
                android:padding="1dp" />

            <TextView
                android:id="@+id/text_CardPrincipal_Titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image_CardPrincipal_Logo"
                android:layout_toRightOf="@+id/image_CardPrincipal_Logo"
                android:maxLines="2"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_CardPrincipal_Endereco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/text_CardPrincipal_Modalidade"
                android:layout_alignLeft="@+id/text_CardPrincipal_Titulo"
                android:layout_alignStart="@+id/text_CardPrincipal_Titulo"
                android:layout_below="@+id/text_CardPrincipal_Titulo"
                android:gravity="center_vertical"
                android:textAllCaps="true"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/text_CardPrincipal_Modalidade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/text_CardPrincipal_Endereco"
                android:layout_alignParentBottom="true"
                android:layout_alignStart="@+id/text_CardPrincipal_Endereco"
                android:maxLines="1"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>