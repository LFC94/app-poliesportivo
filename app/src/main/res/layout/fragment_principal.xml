<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lfcaplicativos.poliesportivo.Fragment.Fragment_Principal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/edit_Principal_Busca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/search"
            app:met_iconLeft="@android:drawable/ic_menu_search" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_principal_ginasio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_Principal_Busca"
            app:met_floatingLabel="highlight">

            <requestFocus />
        </android.support.v7.widget.RecyclerView>
    </RelativeLayout>


</FrameLayout>
